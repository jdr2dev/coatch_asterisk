# Configuración del modelo Whisper
MODEL_SIZE=small
DEVICE=cpu
COMPUTE_TYPE=int8
MODEL_PATH=

# Configuración de audio
SAMPLE_RATE=16000
ENERGY_THRESH=350
VAD_MODE=3

# Configuración de decodificación
DECODE_INTERVAL=0.25
SLIDING_S=1.0
MIN_DECODE_S=0.6
ENDPOINT_MS=500

# Configuración de contexto
CTX_LIMIT_CHARS=2000

# Configuración de relay
RELAY_URL=http://127.0.0.1:7070/event

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=
FRAME_LOG_SEC=5.0
LOG_PARTIALS=1
LOG_FINALS=1

# Configuración de parciales
PARTIAL_REQUIRE_VOICE=1
PARTIAL_RECENT_VOICE_MS=400